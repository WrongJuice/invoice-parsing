{%  extends 'base.html.twig' %}

{% block body  %}

    {% if BandeDessinees != NULL %}
        <br/>
        <h2 class="text-center liste-title"> Vous consultez la liste des {{ GenreConsulte }}</h2>
        <br/>
    {% endif %}

    <ul class="list-unstyled">
        {% set i = 0 %}
        {% for BandeDessinee in BandeDessinees %}

            <li class="media my-4">
                <a href="/BD/{{ BandeDessinee.getId() }}"> <img src="{{ BandeDessinee.getAffiche() }}" class="mr-3" style="height: 200px" alt="affiche_test.jpg"> </a>
                <div class="media-body">
                    <a href="/BD/{{ BandeDessinee.getId() }}" class="BDlist-link"><h5 class="mt-0 mb-1">{{ BandeDessinee.getTitre() }}</h5></a>
                    <p class="font-weight-bold">{{ BandeDessinee.getDateDeParution()|date("m/d/Y") }} • {{ NotesMoyennes[i] }} / 5</p>
                    {% set i = i + 1 %}
                    <p>{{ BandeDessinee.getDescription() }}</p>
                </div>
            </li>

        {% endfor %}
    </ul>


    {% if BandeDessinees == NULL %}
            <div class="row justify-content-between align-items-center" style="width: 600px;">
                <img src="/img/noresult.png" style="width: 200px;">
                <div class=column">
                    <h1 class="noresult-title"> OOPS ! </h1>
                    <h3> Aucun résultat trouvé</h3>
                </div>
            </div>
            <br/>
            <button type="button" class="btn button-download" onclick="window.location.href='http://mpapws.loc:9999/'"> Retour à la page d'accueil</button>
        {% endif %}


{% endblock %}